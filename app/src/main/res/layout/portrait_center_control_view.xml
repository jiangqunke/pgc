<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_speed_rate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_28"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_80"
        android:gravity="center_vertical"
        android:background="@drawable/video_speed_seek_bg"
        android:paddingLeft="@dimen/dp_15"
         android:paddingRight="@dimen/dp_15"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_anim_right"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_anim_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长按快进x2"
            android:textColor="@color/white" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/portrait_rl_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_40"
        android:visibility="gone">

        <ImageView
            android:id="@+id/portrait_iv_progress_light_1"
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_79"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_video_progress_min"
            android:scaleType="fitXY"
            android:src="@drawable/movi_video_clip_progress"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/iv_light"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@+id/portrait_iv_progress_light_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_4"
            android:src="@mipmap/ic_video_light" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/portrait_ll_seek"
        android:layout_width="@dimen/dp_190"
        android:layout_height="@dimen/dp_150"
        android:layout_centerInParent="true"
        android:background="@drawable/round_seek_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/portrait_iv_seek"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/portrait_tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:00"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_18" />

            <TextView
                android:id="@+id/portrait_tv_dev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:text="/"
                android:textColor="@color/title_unselect_adult"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/portrait_tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:00"
                android:textColor="@color/title_unselect_adult"
                android:textSize="@dimen/dp_18" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/portrait_rl_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_40"
        android:visibility="gone">

        <ImageView
            android:id="@+id/portrait_iv_progress_voice_1"
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_79"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_video_progress_min"
            android:scaleType="fitXY"
            android:src="@drawable/movi_video_clip_progress"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@+id/portrait_iv_progress_voice_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_4"
            android:src="@mipmap/ic_video_voice" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@mipmap/ic_video_unlock"
        android:tag="unlock"
        android:visibility="gone" />
</RelativeLayout>